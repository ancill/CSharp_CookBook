@page
@model NorthwindWeb.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
  <h1 class="display-2">Suppliers</h1>
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Company Name</th>
      </tr>
    </thead>
    <tbody>
      @foreach (string name in Model.Suppliers)
      {
        <tr>
          <td>@name</td>
        </tr>
      }
    </tbody>
  </table>
</div>
<div class="row">
  <p>Create a new supplier:</p>
  <form method="POST">
    <div class="form-group row">
      <label for="Supplier.CompanyName" class="col-sm-2 col-form-label">Company Name</label>
      <div class="col-sm-10">
        <input type="text" asp-for="Supplier.CompanyName" class="form-control" placeholder="Name">
      </div>
    </div>
    <div class="form-group row">
      <label for="Supplier.Phone" class="col-sm-2 col-form-label">Phone</label>
      <div class="col-sm-10">
        <input asp-for="Supplier.Phone" type="tel" class="form-control" placeholder="+ 7 999 99 99">
      </div>
    </div>
    <div class="form-group row">
      <label for="Supplier.Country" class="col-sm-2 col-form-label">Country</label>
      <div class="col-sm-10">
        <input asp-for="Supplier.Country" type="text" class="form-control" placeholder="Russia">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>
